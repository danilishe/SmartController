<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="15.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="75.0" spacing="10.0">
         <children>
            <Label text="Появление блока:" />
            <RadioButton mnemonicParsing="false" text="слева">
               <toggleGroup>
                  <ToggleGroup fx:id="direction" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="fromRight" mnemonicParsing="false" selected="true" text="справа" toggleGroup="$direction" />
         </children>
      </HBox>
      <GridPane alignment="CENTER_LEFT" hgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" />
          <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Яркость эффекта" />
            <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1">
               <children>
                  <Slider fx:id="effectBrightness" max="255.0" value="255.0" />
                  <Label fx:id="effectBrightnessLabel" minWidth="30.0" text="255" />
               </children>
            </HBox>
            <CheckBox fx:id="background" minWidth="-Infinity" mnemonicParsing="false" selected="true" text="Накладывать фон" GridPane.rowIndex="1" />
            <HBox fx:id="backgroundBrightnessBox" alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Slider fx:id="backgroundBrightness" max="255.0" />
                  <Label fx:id="backgroundBrightnessLabel" minWidth="30.0" text="0" />
               </children>
            </HBox>
         </children>
      </GridPane>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Spinner fx:id="blockWidth" prefHeight="25.0" prefWidth="76.0" />
            <Label text="Ширина блока" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="След после:">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="5.0"/>
               </padding>
            </Label>
            <Spinner fx:id="traceAfter" prefHeight="25.0" prefWidth="76.0"/>
            <Label text="перед:"/>
            <Spinner fx:id="traceBefore" prefHeight="25.0" prefWidth="76.0"/>
         </children>
      </HBox>
   </children>
   <children>
      <CheckBox fx:id="onlyEmpty" mnemonicParsing="false" text="Менять только пустые"/>
   </children>
   <children>
      <CheckBox fx:id="autoFrame" selected="true" text="Автодобавление кадров"/>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
   </padding>
</VBox>
