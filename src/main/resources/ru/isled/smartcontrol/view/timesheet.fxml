<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fixedCellSize="50.0" prefHeight="300.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="68.0" prefWidth="108.0" sortable="false" text="Команда" />
          <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="132.0" sortable="false" text="Время" />
            <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="109.0" prefWidth="215.0" text="День недели" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <right>
      <VBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" fillHeight="false" spacing="5.0" VBox.vgrow="NEVER">
               <children>
                  <Spinner fx:id="hours" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="95.0" />
                  <Spinner fx:id="minutes" layoutX="10.0" layoutY="10.0" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="95.0" />
               </children>
            </HBox>
            <ChoiceBox fx:id="selectedWeekday" minWidth="200.0" />
            <HBox spacing="5.0">
               <children>
                  <Button maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addOn" prefWidth="100.0" text="Включить" />
                  <Button layoutX="10.0" layoutY="10.0" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addOff" prefWidth="100.0" text="Выключить" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <Button maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#removeSelected" prefWidth="100.0" text="Удалить" />
            <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#export" text="Экспорт">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <bottom>
      <AnchorPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <HBox alignment="CENTER" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <CheckBox mnemonicParsing="false" selected="true" text="Установить время" />
                  <ChoiceBox minWidth="200.0" />
                  <Spinner fx:id="setHours" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="95.0" />
                  <Spinner fx:id="setMinutes" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="95.0" />
                  <Button maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#setCurrentTime" prefWidth="100.0" text="Текущее" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </AnchorPane>
   </bottom>
</BorderPane>
